{{template "Header"}}

<body>
    <div id="app">
        {{template "Sidebar"}}
        <div id="main">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>

            <div class="page-heading">
                <h3>Employ Salary</h3>
                <h3><a class="btn btn-primary" href="/add-salary">Add Salary</a></h3>
            </div>
            <div class="page-content">
                <section class="row">
                    <div class="col-12">
                        <table id="example" class="table table-striped mb-3" style="width:100%">
                            <thead>
                                <tr>
                                    <th>EmployName</th>
                                    <th>Month</th>
                                    <th>Amount</th>
                                    <th>Pay Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                {{range .}}
                                <tr>
                                    <td>{{.EmployName}}</td>
                                    <td>{{.Month}}</td>
                                    <td>{{.Amount}}</td>
                                    <td>{{.PayDate}}</td>
                                
                                
                               
                                    <td>
                                        <a href="/customer/update/" class="btn btn-sm btn-primary">Edit</a>
                                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                                {{end}}
                            </tbody>

                        </table>
                    </div>
                </section>
            </div>
            {{template "Footer"}}